{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2017",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "removeComments": false,
    "baseUrl": ".",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/index.ts"],
  "exclude": ["node_modules", "./**/*.ts"]
}
